<!doctype html>
<html lang="pt-br">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Tela de Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
  </head>
  <body>
    <div class="container d-flex align-items-center justify-content-center vh-100">
      <div class="col-md-8">
        <div class="p-4 p-md-5 border rounded bg-light">
          <h2 class="text-center">Bem Vindo</h2> <!-- Adiciona a classe "text-center" para centralizar o título -->

          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-floating mb-3"> <!-- Adiciona a classe "mb-3" para criar um espaço entre os campos -->
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %> <!-- Adiciona a classe "form-control" para estilizar o campo de email -->
            </div>

            <div class="form-floating mb-3"> <!-- Adiciona a classe "mb-3" para criar um espaço entre os campos -->
              <%= f.label :password %><br />
              <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %> <!-- Adiciona a classe "form-control" para estilizar o campo de senha -->
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="form-check mb-3"> <!-- Adiciona a classe "mb-3" para criar um espaço entre os campos -->
                <%= f.check_box :remember_me, class: "form-check-input" %> <!-- Adiciona a classe "form-check-input" para estilizar o checkbox -->
                <%= f.label :remember_me, class: "form-check-label" %> <!-- Adiciona a classe "form-check-label" para estilizar a label do checkbox -->
              </div>
            <% end %>

            <div class="text-center"> <!-- Adiciona a classe "text-center" para centralizar o botão de submit -->
              <%= f.submit "Entrar", class: "btn btn-primary" %> <!-- Adiciona as classes "btn" e "btn-primary" para estilizar o botão -->
            </div>
          <% end %>

          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
  </body>
</html>
